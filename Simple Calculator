#include <stdio.h>
int main()
{
    int a,b,choice,result;
    printf("Enter the value of a : ");
    scanf("%d",&a);
    printf("Enter the value of b : ");
    scanf("%d",&b);
    printf("Choice 1 for addition ,2 multiplication ,3 subtraction , 4 division : ");
    scanf("%d",  &choice);
    result= (choice==1)?a+b:(choice==2)?a*b:(choice==3)?a-b:(choice==4)?a/b:printf("invalid");
    if(choice==1||choice==2||choice==3||choice==4)
    printf("Result is %d\n",result);
    return 0;
    
}
